<div id = "div1" >
	<%= simple_form_for(item,:id => :form_item, :remote => true) do |f|%>
	  <fieldset>
	    <legend>Add Item</legend>
	    
	    <div class="row">
	    	<div class="small-12  ">
				<div class="small-4 large-4 columns"> 
					<%= f.input :service %>
				</div>
				<div class="small-4 large-4 columns">
					<%= f.input :valor %>
				</div>
				<div class="small-4 large-4 columns">
					<%= submit_tag 'Add Item', :class => 'button'%>
				</div>
			</div>
		</div>
	  </fieldset>
	<% end %>
</div>